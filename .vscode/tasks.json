{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "shell",
			"command": "go",
			"args": [
				"build",
				"-gcflags",
				"-N",
				"-o",
				"../../bin/mqtt-broker"
			],
			"options": {
				"cwd":"${workspaceFolder}/src/main"
			},
			"group": "build",
			"presentation": {
				"reveal": "silent"
			}
		}
	]
}
